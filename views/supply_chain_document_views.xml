<odoo>
    <record id="view_supply_chain_document_list" model="ir.ui.view">
        <field name="name">supply.chain.document.list</field>
        <field name="model">supply.chain.document</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="attachment_count"/>
                <field name="status"/>
            </list>
        </field>
    </record>

    <record id="view_supply_chain_document_form" model="ir.ui.view">
        <field name="name">supply.chain.document.form</field>
        <field name="model">supply.chain.document</field>
        <field name="type">form</field> 
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name"/>
                    <field name="attachment_count"/>
                    <field name="status"/>
                    <field name="attachment_ids" widget="many2many_binary"/>
                </group>
            </form>
        </field>
    </record>
`
    <record id="view_sale_order_form_inherit_scm" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.scm</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/notebook" position="inside">
                <page string="SCM Docs">
                    <field name="scm_document_ids">
                        <list editable="bottom">
                            <field name="name"/>
                            <field name="attachment_ids" widget="many2many_binary"/>
                            <field name="attachment_count"/>
                            <field name="status"/>
                        </list>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

    <record id="action_supply_chain_documents_from_sale_order" model="ir.actions.act_window">
        <field name="name">Supply Chain Documents</field>
        <field name="res_model">supply.chain.document</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="domain">[('sale_order_id', '=', active_id)]</field>
        <field name="context">{'default_sale_order_id': active_id}</field>
    </record>

    <record id="view_sale_order_form_inherit_scm_btn" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.scm.btn</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="%(action_supply_chain_documents_from_sale_order)d"
                        type="action"
                        string="SCM Docs"
                        icon="fa-folder-open"
                        class="btn-primary"/>
            </xpath>
        </field>
    </record>

    <record id="view_supply_chain_document_kanban" model="ir.ui.view">
        <field name="name">supply.chain.document.kanban</field>
        <field name="model">supply.chain.document</field>
        <field name="type">kanban</field>
        <field name="arch" type="xml">
            <kanban default_group_by="status">
                <field name="name"/>
                <field name="status"/>
                <field name="attachment_count"/>
                <field name="attachment_ids"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_kanban_card">
                            <div class="o_kanban_card_header">
                                <strong>
                                    <field name="name"/>
                                </strong>
                            </div>
                            <div class="o_kanban_card_body">
                            </div>
                            <div class="o_kanban_card_footer">
                                <span>Attachments: <field name="attachment_count"/></span>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

</odoo>